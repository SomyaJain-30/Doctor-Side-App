<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDoctorProfile"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="#407CD6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#BFB9B9"
            app:cardCornerRadius="60dp">


            <ImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            app:cardBackgroundColor="#E0F9FF"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/doctor_editprofile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_photo_camera_24" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <LinearLayout

        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/cardView8"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Name"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Name"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Role"
                android:textColor="#858484"
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/doctor_editprofile_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textAlignment="textEnd"
                android:hint="Role"
                android:completionThreshold="0"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Clinic Address :"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_clinicaddress"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Address"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Education"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Education"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Email id"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Experience"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_exprience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="number"
                android:hint="Experience"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Languages"
                android:textColor="#858484"
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/doctor_editprofile_language"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Languages"
                android:imeOptions="actionDone"
                android:completionThreshold="0"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/language_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/doctor_editprofile_language" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#595757"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/gender_text_editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:text="Gender"
                android:textColor="#858484"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/radiogroup_editprofile_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_text_editprofile"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/doctor_editprofile_male"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/doctor_editprofile_female"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/doctor_editprofile_other"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    />
            </RadioGroup>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#595757"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/specialization_text_editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Specialization"
                android:textColor="#858484"
                android:textSize="18dp" />

            <!--            <EditText-->
            <!--                android:id="@+id/doctor_editprofile_specialization"-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:background="@android:color/transparent"-->
            <!--                android:gravity="right"-->
            <!--                android:inputType="text"-->
            <!--                android:hint="Specialization"-->
            <!--                android:textColor="#000000"-->
            <!--                android:textColorHint="#7E7D7D"-->
            <!--                android:textSize="18dp" />-->

            <GridLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_below="@id/specialization_text_editprofile"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:columnCount="2"
                android:rowCount="3">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Anxiety"/>

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Depression"/>

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="De-Addiction"/>

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Bipolar Disorder"/>

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Self-Harm"/>
            </GridLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#595757"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/about_text_editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="About"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="About"
                android:maxLines="4"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp"
                android:layout_below="@+id/about_text_editprofile"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/doctor_editprofile_savechanges"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"/>

    </RelativeLayout>
</ScrollView>