<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormFragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/survey_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a quick survey"
            android:layout_marginTop="10dp"
            android:textColor="@color/drblue"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:textSize="24sp"
            android:layout_below="@+id/navigate_form3"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/navigate_form3"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/linearlayout_background"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="  3/3  "
            android:textColor="#214B7C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/survey_text"
            android:id="@+id/survey_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>